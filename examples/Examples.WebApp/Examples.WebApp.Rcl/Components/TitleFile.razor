@namespace Examples.WebApp.Rcl

<MTabs @bind-Value="tab" Height="18" BackgroundColor="var(--main-bg01-color)" Style="height:25px">
    @foreach (var item in items)
    {
        <MTab Value="item">
            program.cs

            <MButton Style="margin:3px" Icon XSmall>
             <MIcon>mdi-close</MIcon>
         </MButton>
     </MTab>

    }
</MTabs>

<MDivider></MDivider>

<MTabsItems Value="@tab" Style="height:100%;">
    @foreach (var item in items)
    {
        <MTabItem Value="@item" Style="height:98%;">
            <MMonacoEditor Height="@("100%")" EditorOptions="Options"></MMonacoEditor>
        </MTabItem>
    }
</MTabsItems>

@code {

    StringNumber tab;

    List<string> items = new List<string>() { "petizers", "Entrees", "Deserts", "Cocktails" };

    private object Options = new
    {
        value = "console.log('Hello World!');",
        language = "javascript",
        theme = "vs-dark",
        automaticLayout = true,
    };
}