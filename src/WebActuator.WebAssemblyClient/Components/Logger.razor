
@namespace WebActuator.WebAssemblyClient

<MMonacoEditor Value="@Value" Height="@("100%")" ValueChanged="ValueChanged" InitOptions="InitEditor" @ref="_editor"></MMonacoEditor>

@code{

    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }
    
    private MMonacoEditor _editor;


    private async Task<object> InitEditor()
    {
        object options = new
        {
            value = "",
            language = "logger",
            automaticLayout = true,
        };

        return options;
    }

}